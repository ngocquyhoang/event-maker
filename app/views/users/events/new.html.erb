<div class="container" style="margin-top: 60px;">
  <%= form_for :event, method: :post, url: users_events_path do |f| %>
    <%= f.label :event_name, class:"form-label" %>
    <%= f.text_field :name, class:"form-control" %>

    <%= f.label :website_name, class:"form-label" %>
    <%= f.text_field :title_layout, class:"form-control" %>

    <%= f.label :slug, class:"form-label" %>
    <%= f.text_field :slug, class:"form-control" %>

    <%= f.hidden_field :user_id, value: current_user.id, class:"form-control" %>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group pmd-textfield pmd-textfield-floating-label">
          <%= f.label :start_date, class:"form-label", for:"regular1" %>
          <%= f.text_field :start_time, class:"form-control", type: "text",
            id: "datepicker-start-new-event" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group pmd-textfield pmd-textfield-floating-label">
          <%= f.label :end_date, class:"form-label", for:"regular1" %>
          <%= f.text_field :end_time, class:"form-control", type: "text",
            id: "datepicker-end-new-event" %>
        </div>
      </div>
    </div>

    <%= f.label :main_description, class:"form-label" %>
    <%= f.text_area :main_description, class:"form-control" %>

    <%= f.label :sub_description, class:"form-label" %>
    <%= f.text_area :sub_description, class:"form-control" %>

    <div class="row" style="margin: 5px 0;">
      <div class="col-sm-6">
        <%= f.label :layout, class:"form-label" %>
        <%= f.select :layout_id, Layout.all.collect { |l| [ l.title, l.id ] },
          class:"form-control" %>
      </div>

      <div class="col-sm-6">
        <%= f.label :event_type, class:"form-label" %>
        <%= f.select :event_type_id, EventType.all.collect { |e| [ e.label, e.id ] },
          class:"form-control" %>
      </div>
    </div>

    <%= f.label :address, class:"form-label" %>
    <%= f.text_field :address, class:"form-control" %>

    <div class="row">
      <div class="col-sm-6">
        <%= f.label :estimate_amount_people, class:"form-label" %>
        <%= f.number_field :est_amount_people, class:"form-control",  min: 0 %>
      </div>

      <div class="col-sm-6">
        <%= f.label :expense, class:"form-label" %>
        <%= f.number_field :expense, class:"form-control", min: 0 %>
      </div>
    </div>

    <%= f.label :seo_keyword, class:"form-label" %>
    <%= f.text_field :seo_keyword, class:"form-control" %>

    <%= f.label :google_form_link, class:"form-label" %>
    <%= f.text_field :google_form_url, class:"form-control" %>

    <%= f.submit "Submit", class:"btn btn-primary",
      id: "btn-submit-create-event-form" %>
  <% end %>
</div>

