<div style=" margin: 30px 0px 0px 0px; text-align: center; font-family: Arial,Helvetica,sans-serif;" >
  <div>
    <%= link_to root_url do %>
      <img src="http://res.cloudinary.com/ngocquyhoang/image/upload/v1510480811/main-logo-event-maker_jnd8dp.png" style="max-width: 550px;">
    <% end %>
  </div>
  <div>
    <h3 style="font-size: 25px; color: #007bff; margin-top: 30px; margin-bottom: 20px; font-weight: normal;">
      Thanks for patience
    </h3>

    <p style="font-size: 18px; line-height: 20px; margin-bottom: 20px">
      Hi <%= @message.name %>! <br />

      Thanks for patience, We are very happy to receive your letter.
    </p>
    <div style="text-align: left; width: 700px; margin: 0 auto; font-size: 18px; line-height: 22px; margin-bottom: 20px; ">
      <h4 style="margin-bottom: 30px; font-size: 22px; line-height: 24px; font-weight: 400; color: #007bff;">Your Message: </h4>
      <%= @message.message %>
    </div>

    <div style="text-align: left; width: 700px; margin: 0 auto; font-size: 18px; line-height: 22px; margin-bottom: 20px; ">
      <h4 style="margin-bottom: 30px; font-size: 22px; line-height: 24px; font-weight: 400; color: #007bff;">We Reply: </h4>
      <%= @mail_content %>
    </div>
      
    <p  style="font-size: 22px; color: #007bff; line-height: 22px">
      Best regards !
    </p>
  </div>

  <div style=" width: 100%; margin-top: 100px; padding: 15px 0px; background-color: #ffc107; ">
    <div style="display: table; width: 100%;">
      <div style="display: table-cell;">
        <%= link_to "EVENT MAKER", root_url, { :style => 'font-size: 18px; color: #ffffff; display: block; line-height: 20px; text-decoration: none;' } %>
      </div>
      <div style="display: table-cell;">
        <a href="https://ngocquyhoang.com" style="font-size: 18px; color: #ffffff; display: block; line-height: 20px; text-decoration: none;">
          @ngocquyhoang
        </a>
      </div>
    </div>
  </div>
</div>
